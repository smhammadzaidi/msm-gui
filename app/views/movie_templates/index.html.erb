<h1>
  List of all movies
</h1>



<form action="/insert_movie_record" method="post">
  <div>
    <label for="title_field">
      Title
    </label>
    <input type="text" id="title_field" name="the_title">
  </div>

  <div>
    <label for="year_field">
      Year
    </label>
    <input type="text" id="year_field" name="the_year">
  </div>

  <div>
    <label for="duration_field">
      Duration
    </label>
    <input type="text" id="duration_field" name="the_duration">
  </div>

  <div>
    <label for="description_field">
      Description
    </label>
    <input type="text" id="description_field" name="the_description">
  </div>

  <div>
    <label for="image_field">
      Image
    </label>
    <input type="text" id="image_field" name="the_image">
  </div>

  <div>
    <label for="director_id_field">
      Director ID
    </label>
    <input type="text" id="director_id_field" name="the_director_id">
  </div>

  <button>
    Create movie
  </button>
  
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.order({:year => :desc, :title => :asc}).each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director ? the_director.name : "Uh oh! We weren't able to find a director for this movie." %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
